#include<iostream>
using namespace std; 

int add(int num3,int num4)
{
 	 cout << num3 << " + " << num4 << " = " << num3 + num4<<"\n";
 	 cout << num3 << " - " << num4 << " = " << num3 - num4<<"\n";
 	 cout << num3 << " * " << num4 << " = " << num3 * num4<<"\n";
 	 cout << num3 << " / " << num4 << " = " << num3 / num4<<"\n";
}
int main(){

   char op;
  float num1, num2;

  cout << "Enter operator: +, -, *, /: "<<"\n";
  cin >> op;

  cout << "Enter two operands: "<<"\n";
  cin >> num1 >> num2;

  switch(op) {

    case '+':
      add(num1,num2);
      break;

    case '-':
      add(num1,num2);
      break;

    case '*':
      add(num1,num2);
      break;

    case '/':
      add(num1,num2);
      break;

    default:
      // If the operator is other than +, -, * or /, error message is shown
      cout << "Error! operator is not correct";
      break;
  }

  return 0;
}